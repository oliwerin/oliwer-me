---
const { post } = Astro.props;
const {
    url,
    frontmatter: { title, pubDate, description },
} = post;
---

<article class="relative rounded-md p-5 text-black dark:text-white gradient">
    <header
        class="flex flex-col-reverse gap-1.5 sm:flex-row sm:justify-between sm:items-center sm:gap-0 sm:mb-2"
    >
        <h3 class="mb-1.5 sm:mb-0">
            <a class="no-underline text-shadow-in-dark-mode" href={url}
                >{title}</a
            >
        </h3>
        <span class="text-shadow-in-dark-mode"
            >{pubDate.toString().slice(0, 10)}</span
        >
    </header>
    <main>
        <p class="mb-3 text-base text-shadow-in-dark-mode">{description}</p>
    </main>
    <footer class="flex justify-end">
        <a class="text-shadow-in-dark-mode" href={url} tabindex={-1}
            >Read more</a
        >
    </footer>
</article>
