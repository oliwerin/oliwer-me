<button
    class="theme-button grain"
    aria-label="Toggle theme"
    title="Toggle theme"><div class="handle"></div></button
>

<style>
    .theme-button {
        height: 32px;
        width: 16px;
        border: none;
        position: relative;
        color: var(--color-black);
    }

    .handle {
        position: absolute;
        top: 18px;
        left: 3px;
        width: 10px;
        height: 10px;
        border-radius: 4px;
        background-color: var(--color-black);
        transition: top 0.2s ease-in;
    }

    :global(.dark) {
        .handle {
            top: 3px;
        }
    }
</style>

<script>
    const theme = (() => {
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark";
        }
        return "light";
    })();

    if (theme === "light") {
        document.documentElement.classList.remove("dark");
        document
            .querySelector("meta[name='theme-color']")
            .setAttribute("content", "rgb(247, 247, 247)");
    } else {
        document.documentElement.classList.add("dark");
        document
            .querySelector("meta[name='theme-color']")
            .setAttribute("content", "rgb(57, 62, 70)");
    }

    window.localStorage.setItem("theme", theme);

    const element = document.documentElement;
    const nav = document.querySelector("header nav");

    const handleToggleClick = () => {
        if (
            !event.target.classList.contains("theme-button") &&
            !event.target.classList.contains("handle")
        ) {
            return;
        }

        if (element.classList.contains("dark")) {
            element.classList.remove("dark");
            document
                .querySelector("meta[name='theme-color']")
                .setAttribute("content", "rgb(247, 247, 247)");
        } else {
            element.classList.add("dark");
            document
                .querySelector("meta[name='theme-color']")
                .setAttribute("content", "rgb(57, 62, 70)");
        }

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    nav.addEventListener("click", handleToggleClick);
</script>
