<a href="/">
    <div class="logo">
        <div class="text">Oliwer</div>
        <div class="circle gradient"></div>
        <div class="text">Iwanicki</div>
    </div>
</a>

<style>
    a {
        text-decoration: none;

        &:hover::after {
            display: none;
        }
    }

    .logo {
        position: relative;

        @media screen and (min-width: 640px) {
            &:hover {
                .circle {
                    filter: brightness(110%);
                }
            }
        }
    }

    .text {
        font-family: "Merriweather", serif;
        font-weight: 700;
        font-style: normal;
        font-size: 20px;
        line-height: 1;
        position: relative;
        text-shadow: 1px 1px 2px transparent;
        transition: var(--transition-color-text-shadow);
    }

    :global(.dark) .text {
        text-shadow: 1px 1px 2px var(--color-black);
    }

    .circle {
        position: absolute;
        border-radius: 100%;
        width: 32px;
        height: 32px;
        bottom: -7px;
    }
</style>
