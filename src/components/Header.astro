    <nav class="flex items-center justify-between gap-5">
        <Logo />

        <div class="hidden sm:block">
            <Navigation />
        </div>

        <div class="hidden sm:block">
            <ThemeButton />
        </div>

        <OpenMobileNavButton />
    </nav>
</header>
