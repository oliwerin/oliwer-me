<dialog id="snake-dialog">
    <div class="snake-dialog-content">
        <button
            class="close-snake-dialog-button"
            aria-label="Close dialog"
            autofocus
        >
            <span class="line"></span>
            <span class="line"></span>
        </button>
    </div>
</dialog>

<style>
    dialog {
        position: absolute;
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
        top: 0;
        left: 0;
        background-color: transparent;
        align-items: center;
        justify-content: center;
        border: 0;
        margin: 0;
        transition: var(--transition-bg-color);
        backdrop-filter: blur(3px);

        &[open] {
            position: fixed;
            display: flex;
        }
    }

    .snake-dialog-content {
        width: 440px;
        height: auto;
        padding: var(--spacing-6);
        background-color: var(--color-white);
        border-radius: var(--border-radius-lg);
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-end;
    }

    .close-snake-dialog-button {
        height: 26px;
        border: none;
        border-radius: 0;
        padding: 0;
        overflow: hidden;

        &:hover {
            background: none;
            box-shadow: none !important;
        }
    }

    .line {
        display: block;
        width: 32px;
        height: 3px;
        margin-bottom: var(--spacing-2);
        background-color: var(--color-black);
        border-radius: var(--border-radius-lg);

        &:first-child {
            transform: rotate(45deg);
            position: relative;
            top: 1px;
            margin: 0;
        }

        &:last-child {
            transform: rotate(-45deg);
            position: relative;
            top: -2px;
            margin: 0;
        }
    }

    :global(.dark) {
        .snake-dialog-content {
            background-color: var(--color-black);
        }

        .line {
            background-color: var(--color-white);
        }
    }
</style>

<script>
    const snakeModal = document.getElementById("snake-dialog");

    document
        .querySelector(".close-snake-dialog-button")
        .addEventListener("click", () => {
            snakeModal.close();
        });

    snakeModal.addEventListener("click", (event) => {
        if (event.target.id === "snake-dialog") {
            snakeModal.close();
        }
    });
</script>
